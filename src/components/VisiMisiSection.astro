---
// Visi & Misi Section Component
// Displays institution's vision and mission in a formal, professional layout
---

<section id="visi-misi" class="w-full bg-gray-50 py-20">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2
        class="font-bold text-3xl md:text-4xl text-primary mb-2"
        style="font-family: 'Poppins', sans-serif;"
      >
        Visi & Misi
      </h2>
    </div>

    <!-- Two Column Layout -->
    <div class="flex flex-col md:flex-row items-stretch md:gap-8">
      <!-- Visi Column -->
      <div class="bg-white rounded-lg shadow-md p-8 flex flex-col flex-1">
        <!-- Visi Label -->
        <div class="mb-4">
          <span
            class="text-sm font-bold text-amber-500 uppercase"
            style="font-family: 'Poppins', sans-serif;"
          >
            VISI
          </span>
        </div>

        <!-- Visi Title -->
        <h3
          class="font-bold text-2xl text-primary mb-6"
          style="font-family: 'Poppins', sans-serif;"
        >
          Visi
        </h3>

        <!-- Visi Content -->
        <div class="flex-1">
          <p
            class="text-base text-gray-600 leading-relaxed"
            style="font-family: 'Inter', sans-serif;"
          >
            Berkomitmen Memberikan Pelayanan Masyarakat Secara Profesional Dan
            Akuntable Guna Mewujudkan Reformasi Birokrasi Polri.
          </p>
        </div>
      </div>

      <!-- Misi Column -->
      <div class="bg-white rounded-lg shadow-md p-8 flex flex-col flex-1">
        <!-- Misi Label -->
        <div class="mb-4">
          <span
            class="text-sm font-bold text-amber-500 uppercase"
            style="font-family: 'Poppins', sans-serif;"
          >
            MISI
          </span>
        </div>

        <!-- Misi Title -->
        <h3
          class="font-bold text-2xl text-primary mb-6"
          style="font-family: 'Poppins', sans-serif;"
        >
          Misi
        </h3>

        <!-- Misi Content -->
        <div class="flex-1">
          <ul
            class="space-y-3 text-base text-gray-600"
            style="font-family: 'Inter', sans-serif;"
          >
            <li class="flex items-start">
              <span class="w-2 h-2 rounded-full bg-amber-500 mt-2 mr-3 shrink-0"
              ></span>
              <span
                >Memberikan Pelayanan Kepada Masyarakat Terkait Pelayanan
                Laporan/Pengaduan</span
              >
            </li>
            <li class="flex items-start">
              <span class="w-2 h-2 rounded-full bg-amber-500 mt-2 mr-3 shrink-0"
              ></span>
              <span
                >Melaksanakan Tugas Pokok SATRESKRIM Yaitu Kegiatan Penyelidikan
                Dan Penyidikan Tindak Pidana Secara Profesional</span
              >
            </li>
            <li class="flex items-start">
              <span class="w-2 h-2 rounded-full bg-amber-500 mt-2 mr-3 shrink-0"
              ></span>
              <span
                >Menindaklanjuti Komplain Masyarakat Berkaitan Dengan Penanganan
                Perkara Yang Ditangani Oleh SATRESKRIM
              </span>
            </li>
            <li class="flex items-start">
              <span class="w-2 h-2 rounded-full bg-amber-500 mt-2 mr-3 shrink-0"
              ></span>
              <span
                >Meningkatkan Kemampuan Personil SATRESKRIM Dalam Hal
                Penyelidikan Dan Penyidikan Tindak Pidana</span
              >
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
