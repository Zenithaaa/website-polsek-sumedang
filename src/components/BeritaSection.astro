---
// Static data for demonstration - akan diganti dengan data dari database nanti
const beritas = [
  {
    id: 1,
    judul: "Operasi Zebra Lodaya di Sumedang Dimulai, 95 Persen Penindakan Pakai ETLE - Harapan Rakyat",
    slug: "operasi-zebra-lodaya-di-sumedang",
    tanggalPublikasi: new Date("2025-11-24"),
    tanggalFormatted: "24 November 2025",
    gambar: "/berita1.jpg",
    author: {
      name: "Admin"
    }
  },
  {
    id: 2,
    judul: "Sindikat Pembobol Sekolah di Sumedang Ditangkap, Polisi Buru Dua Penadah Lainnya",
    slug: "sindikat-pembobol-sekolah-di-sumedang",
    tanggalPublikasi: new Date("2025-9-10"),
    tanggalFormatted: "10 September 2025",
    gambar: "/berita2.jpg",
    author: {
      name: "Admin"
    }
  },
  {
    id: 3,
    judul: "Polres Sumedang Tangkap Lima Pelaku Curanmor dan Curas",
    slug: "polres-sumedang-tangkap-lima-pelaku-curanmor-dan-curas",
    tanggalPublikasi: new Date("2025-07-26"),
    tanggalFormatted: "26 Juli 2025",
    gambar: "/berita3.jpg",
    author: {
      name: "Admin"
    }
  }
];
---

<!-- Berita Acara Kegiatan Section -->
<section id="berita" class="w-full bg-gray-100 py-20">
  <div class="container mx-auto px-6">
    
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-poppins font-bold text-primary">
        Berita Acara Kegiatan
      </h2>
    </div>
    
    <!-- News Grid -->
    {beritas.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {beritas.map((berita) => (
          <article class="bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 hover:scale-105">
            <!-- News Image -->
            <div class="aspect-video w-full overflow-hidden rounded-t-lg">
              <img 
                src={berita.gambar}
                alt={berita.judul}
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>
            
            <!-- Content Area -->
            <div class="p-6">
              <!-- Meta Information -->
              <div class="flex items-center text-sm text-gray-500 mb-3">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span>{berita.tanggalFormatted}</span>
              </div>
              
              <!-- News Title -->
              <h3 class="text-lg font-poppins font-semibold text-gray-900 mb-3 line-clamp-2">
                {berita.judul}
              </h3>
              
              <!-- Read More Link -->
              <a 
                href={`/berita/${berita.slug}`}
                class="inline-flex items-center font-inter font-medium text-primary hover:underline transition-colors duration-200"
              >
                Baca Selengkapnya
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <!-- Empty State -->
      <div class="text-center py-16">
        <div class="mb-4">
          <svg class="w-16 h-16 text-gray-400 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
          </svg>
        </div>
        <p class="text-gray-600 text-lg font-inter">
          Belum ada berita acara kegiatan untuk saat ini.
        </p>
      </div>
    )}
  </div>
</section>

<!-- Custom styles for line-clamp -->
<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>